<h1>Items!</h1>

<% @items.each do |item| %>
  <section id="item-<%= item.id %>">
    <h3><%= item.name %></h3>
    <ul>
      <li>Price: <%= item.price %></li>
      <li>Location: <%= item.supermarket.name %></li>
      <li>Items purchased: <%= item.total_purchased %></li>
    </ul>
  </section><br>
<% end %>